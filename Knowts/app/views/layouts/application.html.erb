<!DOCTYPE html>
<html>
<head>
  <title>Knowts</title>
  <link href='http://fonts.googleapis.com/css?family=Gilda+Display%7CPoiret+One%7CSpecial+Elite' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/css/about.css">
  <link rel="stylesheet" href="/css/sitemap.css">
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>

<p class="notice"><%= notice %></p>
<div class="alert"><%= alert %></div>
<div class="header">
  <div class="left">
    <a href="/index.html">
      <div>Knowts</div>
    </a>
  </div>
  <div class="right">
    <a href="/index.html">
      <div>Home</div>
    </a>
    <a href="/about.html">
      <div>About</div>
    </a>
    <% if not user_signed_in? %>
        <a href="/login.html">
          <div>Login</div>
        </a>
        <a href="/signup.html">
          <div>Signup</div>
        </a>
    <% else %>
        <a href="/workspaces">
          <div>Workspaces</div>
        </a>
        <%= form_tag('/users/sign_out', method: 'delete', id: 'signout_form') do %>
            <div id="sign_out_button">Logout</div>
        <% end %>
    <% end %>
  </div>
</div>
<div class="content">

<%= yield %>

  <footer class="footer">
    <span><a href="sitemap.html">Sitemap</a></span>
    <span>Website designed &amp; developed by Saxon Jensen.</span>
    <span><a href="http://validator.w3.org/check/referer">Valid HTML 5</a></span>
    <p>
      <a href="http://jigsaw.w3.org/css-validator/check/referer">
        <img style="border:0;width:88px;height:31px"
             src="http://jigsaw.w3.org/css-validator/images/vcss-blue"
             alt="Valid CSS!" />
      </a>
    </p>
  </footer>
</div>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
