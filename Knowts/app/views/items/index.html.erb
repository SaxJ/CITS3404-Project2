<div class="item-content">
<div class="item-links">
 <%= link_to "Back to workspace", workspace_path(@workspace) %>
</div>
<h1 style="text-align: left; margin: 10px;">Listing items</h1>

<table class="items-table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Due</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.items.each do |item| %>
      <tr>
        <td><%= item.content %></td>
        <td><%= item.due %></td>
        <td><%= item.completed %></td>
        <td><%= link_to "Show", list_item_path(@list, item)%></td>
        <td><%= link_to "Edit", edit_list_item_path(@list, item)%></td>
        <td><%= link_to "Delete", "/lists/#{@list.id}/items/#{item.id}", method: 'delete'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
